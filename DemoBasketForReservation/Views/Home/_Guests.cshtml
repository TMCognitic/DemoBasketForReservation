@model IEnumerable<DemoBasketForReservation.Models.Personne>

@{
    int indice = 0;
}

@if (Model is not null && Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" onclick="RemoveGuest(@indice)">Delete</button>
                    </td>
                </tr>
                { indice++; }
            }
        </tbody>
    </table>
}
